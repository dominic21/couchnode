doctype html
html
	head
		meta(charset='UTF-8')
		title= title
	body
		-
			function alert(id){
				var res = confirm("本当に消していいですか？");
				if(res){
					window.location = ("/list/delete/" + id)
				}
			}
		div(Align='center')
			h1= title
			p
			table(border='1')
				tr
					td
						label 日付
					td
						label 作業者
					td
						label 表題
				each json in histry
					tr
						td
							span= json.create_date	
						td
							span= json.value[0]
						td
							a(href="/list/" + json.id)!= json.value[1]
						td
							//a(href="/list/delete/" + json.id) 削除
							input(type='button',value='削除' onclick='alert(json.id)')